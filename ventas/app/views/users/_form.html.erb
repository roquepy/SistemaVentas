 <div class="centrar"><br/>
	 <%= form_for(@user) do |f| %>
	   	<%= render 'mensajes/error_mensajes', object: f.object %>
			<legend>Nuevo Usuario</legend>
			<div class="container">
               <div class="row">
                   <div class="span3">
						<%= f.label "Usuario:" ,class:"label"%>
					    <%= f.text_field :username,:placeholder => "usuario",:maxlength=>"15"%>
					    <label class="label">Funcionario:</label>
						  <%=f.collection_select :id_funcionario,Funcionario.find(:all),:id,:nombres,:prompt=>"--Seleccione--"%>     
						 <a data-toggle="modal" href="#funcionario" ><label  class="mismalinea-espacio">Nuevo Funcionario </label></a> 
				    </div>
				   <div class="span3 offset1">
						<%= f.label "Contrasena:",class:"label" %>
					    <%= f.password_field :password,:placeholder => "contrasena",:maxlength=>"15" %><br/>
				   </div>	
			    </div>   	    
           </div>
           <div class="span5" align="center"><br/>
					<%= f.submit "Guardar", class: "btn btn-primary" %>
			</div>
 </div>          				    			    
						
    <% end %>

      <div id="funcionario" class="modal hide fade in" style="display: none;  " >
          <%= render 'users/ventana_modal'%>
       </div><br/></br>

	  


