<div class="centrar"><br/>
    <%= form_for(@funcionario) do |f| %>
       <%= render 'mensajes/error_mensajes', object: f.object %>
       <h4><%= yield(:title) %></h4><br/>
			 <div class="container">
                <div class="row">
                	<div class="span3">
						<%= f.label "Nombres:",class:"label"%>
						<%= f.text_field :nombres,:placeholder => "nombre",:maxlength=>"50" %><br/>
						<%= f.label "Nro de doc:",class:"label"%>
						<%= f.text_field :num_identidad,:placeholder => "num_documenhto",:maxlength=>"9" %><br/>
						<%= f.label "Telefono:",class:"label"%>
					    <%= f.text_field :telefono,:placeholder => "telefono",:maxlength=>"15" %><br/>
					    <%= f.label "Sexo:",class:"label"%>
						<%= f.select(:sexo, ['M', 'F' ],:prompt=>"--Seleccione--",id:"select")%>
		                <%= f.label "Funcion:",class:"label"%>
					    <%=f.collection_select :id_funcion,Funcion.find(:all),:id,:nombre,:prompt=>"--Seleccione--",id:"select"%>
		            </div>
		            <div class="span3 offset1">
		             	<%= f.label "Apellidos:",class:"label"%>
						<%= f.text_field :apellidos,:placeholder => "apellido",:maxlength=>"50"  %><br/>
					    <%= f.label "Direccion:",class:"label"%>
						<%= f.text_field :direccion,:placeholder => "direccion",:maxlength=>"70"  %><br/>
	                    <%= f.label "Estado civil:",class:"label"%>
						<%= f.select(:estado_civil, ['Casado', 'Soltero' ],:prompt=>"--Seleccione--")%> 
			            <%= f.label "Estado Funcionario:",class:"label"%>
			            <%=f.collection_select :id_estado_funcionario,EstadosFuncionario.find(:all),:id,:descripcion,:prompt=>"--Seleccione--"%>  
			             <%= f.label "Localidad:",class:"label"%>
					     <%=f.collection_select :id_localidad,Localidad.find(:all),:id,:nombre,:prompt=>"--Seleccione--"%>    
			       		 <a data-toggle="modal" href="#localidad" ><label  class="mismalinea-espacio">Nueva Localidad </label></a> 	<br/>  
			     </div> 
	        </div>	
	    </div>
</div>	        	
	           <div align="center">
		            <div class="abajo"><br/>                 
				    	<%= f.submit "Guardar", class: "btn btn-primary" %>	
				    </div>	
				</div>    	 
    <% end %>

     <div id="localidad" class="modal hide fade in" style="display: none;  " >
           <%= render 'funcionarios/ventana_modal'%>
      </div><br/></br>
     
