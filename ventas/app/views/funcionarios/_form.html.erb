
<div class="row">
  <div class="span6 offset3">
  	<br/>
    <%= form_for(@funcionario) do |f| %>
   		 <%= render 'mensajes/error_mensajes', object: f.object %>
	    <div class="center hero-unit">
		   <form class="form-horizontal">
			   <fieldset>
				  <div class="page-header">
					 <div class="row-fluid">
						<div class="span1">  	
					    </div>
					    <div class="span10">
							<div class="well well-small" align="center">
								<h4><%= yield(:title) %></h4>
							      <%= f.label :nombres%>
							      <%= f.text_field :nombres,:placeholder => "nombre" %>
							      <%= f.label :apellidos%>
							      <%= f.text_field :apellidos,:placeholder => "apellido"  %>
							      <%= f.label :Nro_de_doc%>
							      <%= f.text_field :num_identidad,:placeholder => "num_documenhto" %>
							      <%= f.label :direccion%>
							      <%= f.text_field :direccion,:placeholder => "direccion"  %>
							      <%= f.label :telefono%>
							      <%= f.text_field :telefono,:placeholder => "telefono"  %>
							       <p>Estado Civil</p>
									 <select name="funcionario[estado_civil]">
									 	<option value="1">--Seleccione--</option> 
                                        <option value="Soltero">Soltero</option> 
                                        <option value="Casado">Casado</option> 
                                     </select> 
							       <p>Sexo</p>
									 <select name="funcionario[sexo]">
									 	<option value="1">--Seleccione--</option> 
                                        <option value="M">Masculino</option> 
                                        <option value="F">Femenino</option> 
                                     </select>  
		                         
									 <p>Localidades</p>
		                          	 <select name="funcionario[id_localidad]">
									 	<option value="1">--Seleccione--</option> 
									   <% @localidades.each do |localidad| %>
									       <option value="<%= localidad.id %>" 
									         <%= 'selected' if localidad.id == @funcionario.id_localidad%>>
									         <%= localidad.nombre %>
									       </option>
									   <% end %>
		                              </select> 
							      <p>Funciones</p>
									 <select name="funcionario[id_funcion]">
									 	 	<option value="1">--Seleccione--</option> 
									 	 <% @funciones.each do |funcion| %>
									       <option value="<%= funcion.id %>" 
									         <%= 'selected' if funcion.id == @funcionario.id_funcion%>>
									         <%= funcion.nombre %>
									       </option>
									   <% end %> 
		                            </select> 
		                          	<p>Estado del Funcionario</p>
		                          	<select name="funcionario[id_estado_funcionario]">
		                          		<option value="1">--Seleccione--</option> 
									    <% @estados_funcionarios.each do |estado_funcionario| %>
									       <option value="<%= estado_funcionario.id %>" 
									         <%= 'selected' if estado_funcionario.id == @funcionario.id_estado_funcionario%>>
									         <%= estado_funcionario.descripcion %>
									       </option>
									   <% end %> 
		                            </select> <br/>
							      <%= f.submit "Guardar", class: "btn btn-primary" %>
							 </div>	    
						 </div>
					 </div>
				 </div>
			  </fieldset>
		   </form>	
		</div>
    <% end %>
  </div>
</div>