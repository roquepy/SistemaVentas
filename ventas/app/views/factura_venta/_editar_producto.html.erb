<script type="text/javascript">
    $(document).ready(function () {
        $('#update').on("click", function() {
            var _id= $("#id").val();
             var _id_factura_venta= $("#id_factura_venta").val();
             var _id_producto =$("#id_producto").val();

             var _cantidad = $("#cantidad").val();
                 window.alert(_cantidad)
             var _descuento = $("#descuento").val();
             $.ajax({
                    url: $(this).attr('ajax_path'),
                    data: {"id":_id,"id_factura_venta":_id_factura_venta,"id_producto":_id_producto,"cantidad":_cantidad,"descuento":_descuento},
                    async: true,
                    dataType: 'script'
                    });
                    return false;
         });
    });
</script>

 <div class="container"><br/>
          <%= hidden_field_tag :id,params[:id]%>
            <%= hidden_field_tag :id_factura_venta,params[:id_factura_venta]%>
                <div class="span3">
                    <label class="label">Producto:</label>
                    <%= hidden_field_tag :id_producto,params[:id_producto] %>
                    <%= text_field_tag "" ,:value=>@producto,:disabled=>true %>
                </div>  
                <div class="span3 offset1">
                    <label class="label">Cantidad:</label>
                    <%=text_field_tag :cantidad,params[:cantidad],:value=>@cantidad%>
                </div> 
                <div class="span3 offset1">  
                    <label class="label">Descuento:</label>
                    <%= text_field_tag :descuento,params[:descuento],:value=>@descuento %>
                </div>      
                                
 </div>
    <div class="span3 offset4" align="center"><br/><br/>
       <%= link_to "Guardar", "#", :id => "update",  :class => 'btn btn-success',:ajax_path => actualizar_detalle_factura_venta_path%>
    </div>           

