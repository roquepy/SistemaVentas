<div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
        <h3>Nuevo Cliente</h3>
</div>

<div class="modal-body">
    <p id="notice"><%= notice %></p>
       <%= form_for@cliente, remote:true do |f| %>
     		 <div class="container">
            <div class="row">
               <div class="span3 ">
              <%= f.label "Nombre:",class:"label"%>
              <%= f.text_field :nombre,:id=>"txt_nombres",:placeholder => "Ingrese Nombre",:maxlength=>"25" %>
              <%= f.label "Nro de doc:",class:"label"%>
              <%= f.text_field :num_identidad,:placeholder => "Ingrese Nº de RUC o CI",:maxlength=>"9" %>
              <%= f.label "Telefono:",class:"label"%>
              <%= f.text_field :telefono,:placeholder => " Formato: (xxx) xxx xxx" ,:maxlength=>"15" %>
              <%= f.label "Localidad:",class:"label"%>
              <%=f.collection_select :id_localidad,Localidad.find(:all),:id,:nombre,:prompt=>"Seleccione Localidad"%>      
              <a data-toggle="modal" href="#localidad" ><label>Nueva Localidad </label></a> 
            </div>
            <div class="span3 ">
                <%= f.label "Apellido:",class:"label"%>
                <%= f.text_field :apellido,:placeholder => "Ingrese Apellido",:maxlength=>"25" %>
                <%= f.label "Direccion:",class:"label"%>
                <%= f.text_field :direccion,:placeholder => "Ingrese Direccion",:maxlength=>"50"  %> </br>
                <%= f.label "Sexo:",class:"label"%></br>
                <%= f.select(:sexo, ['M', 'F' ],:prompt=>"Seleccione Sexo",id:"select")%>
            </div>
        </div>
      </div>    
 </div>	

  	     <div class="modal-footer">
              <%= f.submit "Guardar", :class => 'btn btn-success'%>
              <a href="#" class="btn" data-dismiss="modal">Salir</a>
         </div>
      <% end %>