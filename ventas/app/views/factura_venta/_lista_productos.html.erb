				<th>Cantidad</th>
				<th>Precio</th>
				<th>Total</th>
				<th>Acciones</th>
			</tr>
		</thead>
	  <tbody>
	  	<% if @detalles_factura_ventas==nil
	  	else
		  	@detalles_factura_ventas.each  do |detalle_factura_venta| %>	
