<div class="mover">
    <%= form_for(@factura_ventum) do |f| %>
       <%= render 'mensajes/error_mensajes', object: f.object %>
          <h4><%= yield(:title) %></h4><br/>
           <div class="container">
              <div class="row">
                <div class="span3">
                   <%= f.label :fecha,class:"label"%>
                   <%= f.text_field :fecha,:value => Date.today,:readonly => true%>
                   <label class="label">Clientes</label>
                      <select name="factura_ventum[id_cliente]" class="selectpicker">
                          <option value="1">--Seleccione--</option> 
                              <% @clientes.each do |cliente| %>
                                  <option value="<%= cliente.id %>" 
                                      <%= 'selected' if cliente.id == @factura_ventum.id_cliente%>> <%= cliente.nombre %>
                                   </option>
                             <% end %>
                    </select>  
                </div>
                <div class="span3 offset1">
                   <%= f.label :Nro_de_Factura,class:"label"%>
                   <%= f.text_field :nro_factura,:readonly => true%>
                    <label class="label">Condicion de pago:</label>
                        <select name="factura_ventum[id_condicion_pago]" class="selectpicker">
                          <option value="1">--Seleccione--</option> 
                              <% @condiciones_de_pagos.each do |condicion_pago| %>
                                  <option value="<%= condicion_pago.id %>" 
                                      <%= 'selected' if condicion_pago.id == @factura_ventum.id_condicion_pago%>> <%= condicion_pago.nombre_condicion_de_pago %>
                                   </option>
                             <% end %>
                    </select>      
                </div> 
                <div class="span3 offset1">  
                   <%= f.label :funcionario,class:"label"%>
                   <%= f.text_field :id_funcionario,:text=>current_user.funcionario.nombres + " " + current_user.funcionario.apellidos,:value =>current_user.funcionario.nombres + " " + current_user.funcionario.apellidos,:readonly => true %> 
                    <label class="label">Tipo de Valor</label>
                          <select name="factura_ventum[id_tipo_valor]" class="selectpicker">
                               <option value="1">--Seleccione--</option> 
                                  <% @tipos_de_valores.each do |tipo_de_valor| %>
                                      <option value="<%= tipo_de_valor.id %>" 
                                         <%= 'selected' if tipo_de_valor.id == @factura_ventum.id_tipo_valor%>>
                                           <%= tipo_de_valor.descripcion%>
                                </option>
                                    <% end %>
                           </select> 
                 </div>   
                    <div class="span3">
                       <%= f.label :descuento,class:"label"%>
                       <%= f.text_field :total_descuento ,:value => FacturaVentum.descuento(100),:readonly => true %>  
                       <%= f.label :Total_Iva,class:"label"%>
                       <%= f.text_field :total_iva,:value => FacturaVentum.factura_total_iva(100),:readonly => true %>
                    </div>   
                    <div class="span3 offset1">
                       <%= f.label :Total_Iva_5,class:"label"%>
                       <%= f.text_field :total_iva5,:value => FacturaVentum.factura_total_iva5(100),:readonly => true %>
                    </div>
                    <div class="span3 offset1">
                      <%= f.label :Total_Iva_10,class:"label"%>
                      <%= f.text_field :total_iva10,:value => FacturaVentum.factura_total_iva10(100),:readonly => true %>
                     </div> 
                     
            </div>
         </div>   
   
                   <div class="abajo"><br/>    
                    <a style='cursor: pointer;' onclick="muestra_oculta('producto')"><label>Cargar Producto </label></a>
                  </div>  
  </div>                
  
            <div id="producto"style="display: none; ">
              <div class="mover">
                   <h4>Producto</h4><br/>
                      <%= form_for @detalle_factura_venta do |g| %>
                        <%= render 'mensajes/error_mensajes', object: g.object %>
                            <div class="container">
                                <div class="row">
                                    <div class="span3">
                                       <label class="label">Producto:</label>
                                         <select name="detalle_factura_venta[id_producto]" class="selectpicker">
                                            <option value="1">--Seleccione--</option> 
                                             <% @productos.each do |producto| %>
                                                 <option value="<%= producto.id %>" 
                                                   <%= 'selected' if producto.id == @detalle_factura_venta.id_producto%>>
                                                   <%= producto.descripcion %>
                                                 </option>
                                            <% end %>>
                                            </select> 
                                   </div>      
                                   <div class="span3 offset1">
                                        <%= g.label "Cantidad:",class:"label" %>
                                      <%= g.text_field :cantidad %>
                                    </div>
                                    <div class="span3 offset1">
                                            <%= g.label "Descuento:" ,class:"label"%>
                                            <%= g.text_field :descuento %>
                                    </div>       
                              </div><br/>
                           </div>   
                                 <div class="abajo"><br/>
                                    <%= g.submit "Guardar", :class => 'btn btn-success', :controller => 'factura_venta_controller', :action =>'detalle_factura_venta_create' %>
                                 </div>   
                             </div>
                           </div>   
                            <% end %>
                   </div> <br/><br/>

                   <div class="abajo"><br/>    
                      <%= f.submit "Guardar", class: "btn btn-primary"%>
                  </div>    
              <% end %>
               
