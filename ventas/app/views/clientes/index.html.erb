<label id="alert-destroy" class="alert alert-error span8 offset2" style="display: none; margin-top:10px;"></label>
<label id="alert-success" class="alert alert-success span8 offset2" style="display: none; margin-top:10px;"></label>
 <br/><br/><br/>
	  <div align="center">
		<h3> Lista de Clientes</h3>
		</div>
		
	   <div class="container-fluid">
	   	<div class="mismalinea">
	   		<label class="mismalinea">Filtrar:</label>
		    <input type="text" id="filtrar" placeholder="Filtrar" class="mismalinea-espacio">
	    </div>
			<table id="table" class="table table-bordered">
				<thead>
						<tr>
							<th>NÂ°</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>RUC/Nro CI</th>
							<th>Direccion</th>
							<th>Telefono</th>
							<th>Sexo</th>
							<th>Localidad</th>
							<th>Acciones</th>
						</tr>
				</thead>
				<tbody>
		            <% @clientes.each_with_index  do |cliente, i| %>
		            <% id = "page-" +i.to_s %> 					
						<tr>
							<td><%= i+1 %></td>
							<td><%= cliente.nombre %></td>
							<td><%= cliente.apellido %></td>
	                        <td><%= cliente.num_identidad %></td>
							<td><%= cliente.direccion %></td>
	                        <td><%= cliente.telefono%></td>
				            <td><%= cliente.sexo %></td>
				            <td><%= cliente.localidad.nombre %></td>
							<td><i class="icon-edit" title="editar"></i><%= link_to "Editar", edit_cliente_path(cliente) %> &nbsp &nbsp &nbsp   
							    		<i class="icon-remove-sign" title="borrar"></i><%= link_to "Borrar", cliente, :confirm => "Desea eliminar el cliente: "+cliente.nombre, :method => :delete, remote: true %>
							</td>
						</tr>
		            <% end %>
		            
				</tbody>
			</table>
	    		<%=will_paginate %>	
	  </div>
	   <div align="center">
			<i class="icon-plus-sign" title="editar"></i>&nbsp<%= link_to 'Nuevo Cliente', new_cliente_path %>&nbsp&nbsp
			<h8> | </h8>&nbsp&nbsp
			<i class="icon-file" title="editar"></i>&nbsp<%= link_to 'Ver en PDF', clientes_path(:format => 'pdf'), :target => '_blank'%>
	  </div>		

