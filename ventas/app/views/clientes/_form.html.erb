   <div class="centrar" >
    <%= form_for @cliente do |f| %>
   		 <%= render 'mensajes/error_mensajes', object: f.object %>
			<h4><%= yield(:title) %></h4><br/>
			<div class="container">
               <div class="row">
                   <div class="span3">
				        <%= f.label "Nombre:",class:"label"%>
					    <%= f.text_field :nombre,:id=>"txt_nombres",:placeholder => "Nombre",:maxlength=>"25" %>
					    <%= f.label "Nro de doc:",class:"label"%>
						<%= f.text_field :num_identidad,:placeholder => "RUC o Cedula de Identidad",:maxlength=>"9" %>
						<%= f.label "Telefono:",class:"label"%>
							<%= f.text_field :telefono,:placeholder => "(xxx) xxx xxx" ,:maxlength=>"15" %>
						<label class="label">Localidad:</label>
				           <%=f.collection_select :id_localidad,Localidad.find(:all),:id,:nombre,:prompt=>"--Seleccione--"%>    
								
							<a data-toggle="modal" href="#localidad" ><label>Nueva Localidad </label></a> 
					</div>
					<div class="span3 offset1">
					        <%= f.label "Apellido:",class:"label"%>
					 	    <%= f.text_field :apellido,:placeholder => "Apellido",:maxlength=>"25" %>
					 	    <%= f.label "Direccion:",class:"label"%>
							<%= f.text_field :direccion,:placeholder => "Direccion",:maxlength=>"50"  %>
							<label class="label">Sexo:</label>
							<%= f.select(:sexo, ['M', 'F' ],:prompt=>"--Seleccione--",id:"select")%>
				     </div>
				</div>
			</div>	
</div>		    			
			      <div class="abajo" align="center"><br/>
					<%= f.submit "Guardar", class: "btn btn-primary"%>
				   </div>	 
	
    <% end %>

      <div id="localidad" class="modal hide fade in" style="display: none;  " >
           <div class="modal-header">
               <a class="close" data-dismiss="modal">Ã—</a>
                   <h3>Nueva Localidad</h3>
           </div>
           <div class="modal-body">
               <p id="notice"><%= notice %></p>
                    <%= form_for(@localidad) do |f| %>
   		               <%= render 'mensajes/error_mensajes', object: f.object %>
				         <div class="mismalinea">
							 <%= f.label "Localidad:",class:"mismalinea"%>
							 <%= f.text_field :nombre,:placeholder => "localidad",class:"mismalinea-espacio",:maxlength=>"35" %>
					     </div><br/>
					     <div class="mismalinea">		 
			                 <label class="mismalinea">Departamento:</label>
			                 <%=f.collection_select :id_departamento,Departamento.find(:all),:id,:nombre,:prompt=>"--Seleccione--"%>  
						 </div>    
			 </div>	   
	        	
      
       
                        <div class="modal-footer">
                            <%= f.submit "Guardar", :class => 'btn btn-success', :controller => 'clientes_controller', :action =>'localidad_create' %>
                            <a href="#" class="btn" data-dismiss="modal">Close</a>
                        </div>
                    <% end %>
        <div><br/></br>
     
