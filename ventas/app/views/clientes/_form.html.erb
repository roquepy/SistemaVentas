   <div class="centrar" >
    <%= form_for @cliente, :validate => true do |f| %>
   		 <%= render 'mensajes/error_mensajes', object: f.object %>
				 	<h4><%= yield(:title) %></h4><br/>
					     <div class="mismalinea">
					         <%= f.label "Nombre:",class:"mismalinea"%>
							<%= f.text_field :nombre,:id=>"txt_nombres",:placeholder => "Nombre",:maxlength=>"25",class:"mismalinea-espacio" %>
						</div> 
						<div class="mismalinea-espacio-grande">
					        <%= f.label "Apellido:",class:"mismalinea"%>
					 	    <%= f.text_field :apellido,:placeholder => "Apellido",class:"mismalinea-espacio",:maxlength=>"25" %>
				       </div><br/><br/><br/>
				       <div class="mismalinea">
							<%= f.label "Nro de doc:" ,class:"mismalinea"%>
							<%= f.text_field :num_identidad,:placeholder => "RUC o Cedula de Identidad",class:"mismalinea-espacio",:maxlength=>"9" %>
						</div>	
						<div class="mismalinea-espacio-grande">
							<%= f.label "Direccion:",class:"mismalinea"%>
							<%= f.text_field :direccion,:placeholder => "Direccion",class:"mismalinea-espacio",:maxlength=>"50"  %>
						</div><br/><br/><br/>
						<div class="mismalinea">
							<%= f.label "Telefono:",class:"mismalinea"%>
							<%= f.text_field :telefono,:placeholder => "(xxx) xxx xxx" ,class:"mismalinea-espacio",:maxlength=>"15" %>
					    </div>
					    <div class="mismalinea-espacio-grande">
					        <label class="mismalinea">Sexo:</label>
					        <div class="mismalinea-espacio">
								<select name="cliente[sexo]" class="selectpicker" >
								   <option value="1">Seleccione su sexo</option> 
					                <option value="M">Masculino</option> 
					                <option value="F">Femenino</option> 
					            </select>  
					        </div>
				        </div><br/><br/><br/>
				        <div class="mismalinea">
				            <label class="mismalinea">Localidad:</label>
				            <div class="mismalinea-espacio">
							    <select name="cliente[id_localidad]" class="selectpicker">
							    	<option value="1">Seleccione la localidad</option> 
								      <% @localidades.each do |localidad| %>
											<option value="<%= localidad.id %>" 
											       <%= 'selected' if localidad.id == @cliente.id_localidad%>>
												    <%= localidad.nombre %>
											</option>
									   <% end %>
								 </select> 
								
							</div>
							<a data-toggle="modal" href="#localidad" ><label  class="mismalinea-espacio">Nueva Localidad </label></a> 	
						</div>
			</div>			
			      <div class="abajo"><br/>
					<%= f.submit "Guardar", class: "btn btn-primary"%>
				   </div>	 
	
    <% end %>

      <div id="localidad" class="modal hide fade in" style="display: none;  " >
           <div class="modal-header">
               <a class="close" data-dismiss="modal">Ã—</a>
                   <h3>Nueva Localidad</h3>
           </div>
           <div class="modal-body">
               <p id="notice"><%= notice %></p>
                    <%= form_for(@localidad) do |f| %>
   		               <%= render 'mensajes/error_mensajes', object: f.object %>
				         <div class="mismalinea">
							 <%= f.label "Localidad:",class:"mismalinea"%>
							 <%= f.text_field :nombre,:placeholder => "localidad",class:"mismalinea-espacio",:maxlength=>"35" %>
					     </div><br/>
					     <div class="mismalinea">		 
			                 <label class="mismalinea">Departamento:</label>
			                 <div class="mismalinea-espacio">
					              <select name="localidad[id_departamento]" class="selectpicker">
									 <option value="1">--Seleccione--</option> 
										 <% @departamentos.each do |departamento| %>
											 <option value="<%= departamento.id %>" 
												    <%= 'selected' if departamento.id == @localidad.id_departamento%>><%= departamento.nombre %>
											  </option>
										  <% end %>
							       </select><br/>
							  </div>    
						 </div>	   
	        	
            </div>
       
                        <div class="modal-footer">
                            <%= f.submit "Guardar", :class => 'btn btn-success', :controller => 'clientes_controller', :action =>'localidad_create' %>
                            <a href="#" class="btn" data-dismiss="modal">Close</a>
                        </div>
                    <% end %>
        </div><br/></br>
     
