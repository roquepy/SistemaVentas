<div class="span8 offset2" style="margin-top:80px;">  
    <%= form_for @detalle_movimiento_stock,:validate => true do |f| %>
       <%= render 'mensajes/error_mensajes', object: f.object %>  
      <legend>Actualizar</legend>
      <div class="span8">
            <div class="span3">
                <%= f.label "Producto(*)",class:"label"%>
                <%= f.text_field :id_stock, class:"span3", :maxlength=>"25",:value=>@detalle_movimiento_stock.stock.producto.descripcion,:readonly => true%>
                <%= f.hidden_field :id_stock,:value=>@detalle_movimiento_stock.id_stock%>
            </div>
          <div class="span3">
               <%= f.label "Cantidad(*)",class:"label"%>
             <%= f.text_field :cantidad ,class: "span3",:maxlength=>"3" %>
          </div> 
        </div>  
        <div class="span2 offset3" align="center"><br/>
            <%= f.submit "Guardar", class: "btn btn-primary"%>
            <%= link_to "Cancelar", detalles_movimientos_stocks_path, class: "btn"%>
        </div>
  </div>  
<% end %> 
     
