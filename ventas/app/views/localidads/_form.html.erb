<div class="centrar"><br/>
    <%= form_for(@localidad) do |f| %>
   		 <%= render 'mensajes/error_mensajes', object: f.object %>
	        <legend>Nuevo Localidad</legend>
	        <div class="container">
                <div class="row">
                    <div class="span3 offset2">
						 <%= f.label "Localidad:",class:"label"%>
						 <%= f.text_field :nombre,:placeholder => "Ingrese Localidad",:maxlength=>"35" %>		 
	                     <%= f.label "Departamento:",class:"label"%>
	                	 <%=f.collection_select :id_departamento,Departamento.find(:all),:id,:nombre,:prompt=>"Seleccione Departamento"%> 
					     <a data-toggle="modal" href="#departamento" ><label>(+) Nuevo Departamento</label></a> 	 
				    </div>	    
			   </div>
			</div> 
			<div class="span5" align="center"><br/>    
			<%= f.submit "Guardar", class: "btn btn-primary" %>
</div>  	  
</div>	
							
<% end %>

<div id="departamento" class="modal hide fade in" style="display: none;  " >
            <%= render 'localidads/ventana_modal'%>
</div><br/></br>
     
    
