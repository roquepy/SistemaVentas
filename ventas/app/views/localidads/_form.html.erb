<div class="centrar"><br/>
    <%= form_for(@localidad) do |f| %>
   		 <%= render 'mensajes/error_mensajes', object: f.object %>
	        <h4><%= yield(:title) %></h4><br/>
	        <div class="container">
                <div class="row">
                    <div class="span3">
						 <%= f.label "Localidad:",class:"label"%>
						 <%= f.text_field :nombre,:placeholder => "localidad",:maxlength=>"35" %>
				   </div>	
				    <div class="span3 offset1">		 
	                     <label class="label">Departamento:</label>
	                	 <%=f.collection_select :id_departamento,Departamento.find(:all),:id,:nombre,:prompt=>"--Seleccione--"%> 
					     <a data-toggle="modal" href="#departamento" ><label>Nuevo Departamento </label></a> 	 
				    </div>	    
			   </div>
			</div>   	  
</div>			 
					<div class="abajo" align="center"><br/>    
						<%= f.submit "Guardar", class: "btn btn-primary" %>
		            </div>
							
    <% end %>
    <div id="departamento" class="modal hide fade in" style="display: none;  " >
           <div class="modal-header">
               <a class="close" data-dismiss="modal">Ã—</a>
                   <h3>Nuevo Departamento</h3>
           </div>
           <div class="modal-body">
               <p id="notice"><%= notice %></p>
                 
                    <%= form_for(@departamento) do |f| %>
   		                <%= render 'mensajes/error_mensajes', object: f.object %>
						    <div class="mismalinea">
									 <%= f.label "Departamento:",class:"mismalinea"%>
									  <%= f.text_field :nombre,:placeholder => "departamento",class:"mismalinea-espacio",:maxlength=>"35" %>
				             </div> 
            </div>
             <div class="modal-footer">
                  <%= f.submit "Guardar", :class => 'btn btn-success', :controller => 'localidads_controller', :action =>'departamento_create' %>
                   <a href="#" class="btn" data-dismiss="modal">Close</a>
               </div>
                    <% end %>
        </div><br/></br>
     
    
