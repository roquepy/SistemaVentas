  <br/>
  <%= form_tag localidads_path, :method => 'get' do %>
  <div align="center">
	<h3> Lista de Localidades</h3>
	</div>
   <div class="container-fluid">
   	    <p>
		    <%= text_field_tag :buscar, params[:buscar] %>
		    <%= submit_tag "Buscar",  class: "btn btn-primary",:name => nil %>
	    </p>
		<table class="table table-bordered">
			<thead>
					<tr>
						<th>Nombre</th>
						<th>Departamento</th>
						<th>Acciones</th>
					</tr>
			</thead>
			<tbody>
	            <% @localidads.each  do |localidad| %>					
					<tr>
						<td><%= localidad.nombre %></td>
			            <td><%= localidad.departamento.nombre %></td>
						<td><i class="icon-edit" title="editar"></i><%= link_to "editar", edit_localidad_path(localidad) %> &nbsp &nbsp &nbsp   
						    		<i class="icon-remove-sign" title="borrar"></i><%= link_to "borrar",localidad, :confirm => "Desea eliminar la localidad "+localidad.nombre, :method => :delete %>
						</td>
					</tr>
	            <% end %>
			</tbody>
		</table>
		<%=will_paginate %>
  </div>
   <div align="center">
		<%= link_to 'Agregar Nueva Localidad', new_localidad_path %>
  </div>		
  <% end %>
