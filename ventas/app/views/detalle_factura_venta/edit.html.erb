<div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
        <h3>Producto</h3>
</div>

<div class="modal-body">
  <p id="notice"><%= notice %></p>
        <%= form_for @detalle_factura_ventum,:remote=>true do |f| %>
        <%= render 'mensajes/error_mensajes', object: f.object %>
            <div class="container">
                <div class="row">
                    <div class="span3">
                        <%=f.hidden_field :id_factura_venta,:value=>FacturaVentum.id_factura()%>
                        <%=f.label "Producto:",class:"label" %>
                        <%=f.collection_select :id_producto,Producto.find(:all),:id,:descripcion,:prompt=>"--Seleccione--",id:"select"%>
                         <%= f.label "Descuento:" ,class:"label"%>
                        <%= f.text_field :descuento %>
                    </div>      
                    <div class="span3">
                        <%= f.label "Cantidad:",class:"label" %>
                        <%= f.text_field :cantidad %>
                    </div>       
                </div>
            </div>
</div>         
    <div class="modal-footer">
         <%= f.submit "Guardar", :class => 'btn btn-success'%>
         <div id="guardar_agregar">
            <%= f.submit "Guardar Y Agregar", :class => 'btn btn-success'%>
        </div>
         <a href="#" class="btn" data-dismiss="modal">Cerrar</a>
    </div>        
        <% end %><br/><br/>

