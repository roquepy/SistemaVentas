<div class="span13">
<fieldset>
    <legend>
      Log de Auditoria
    </legend>
    <%= form_tag :action => 'index', :controller => 'auditorias', :method => :post do%>
      <div class="span1" align="center">
          <%= label_tag :from, 'Desde:' %>
      </div>
      <div class="span3">
          <%= text_field_tag :from, '', id: :from, :size => '20'%>  
      </div>
      <div class="span1">
          <%= label_tag :to, "Hasta:" %>
      </div>
      <div class="span3">
          <%= text_field_tag :to, '', id: :to, :size => '20'%>
      </div>
    <% end %>
  </fieldset>

<div class="span12">
  <table id="my-table" class="table table-bordered">
      <thead class="table-title">  
      <tr>
        <th class="span3">Fecha</th>
        <th class="span1">Nivel</th>
        <th class="span8">Log</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @objects.each do |array| %>
          <td class="span3">  <%= array[1] %> </td>
          <td class="span1">  <%= array[2] %>  </td>
          <td class="span8">  <%= array[3] %>  </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

<script>
  $(document).ready(function(){
    $("input#from,input#to").datepicker({
      altField: $(this).attr("id"),
      changeMonth: true,
      changeYear: true,
      dateFormat: 'dd-mm-yy',
      monthNamesShort: ['Ene','Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul',
        'Ago', 'Set', 'Oct', 'Nov', 'Dic'],
      dayNamesMin: ['Do', 'Lu', 'Ma', 'Mie', 'Ju', 'Vie', 'Sa'],
      gotoCurrent: true,
      yearRange: '1900:2040'

    });
    // place holder para fechas
    $("input#from,input#to").attr({
      'placeholder':'dd/mm/aaaa',
      'size':'12',
      'maxlength':'12'
    });
  });
  
  
  
</script>