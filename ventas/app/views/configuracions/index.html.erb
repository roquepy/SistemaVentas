  <%= form_tag configuracions_path, :method => 'get' do %>
    <div align="center">
    <h3> Datos de la Empresa</h3>
    </div>
    
     <div class="container-fluid">
      <div class="mismalinea">
        <label class="mismalinea">Filtrar:</label>
       <input type="text" id="filtrar" placeholder="Filtrar" class="mismalinea-espacio">
      </div>
      <table id="table" class="table table-bordered">
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Direccion</th>
              <th>RUC</th>
              <th>Timbrado</th>
              <th>Timbrado Vencimiento</th>
              <th>Telefono</th>
              <th>Celular/Fax</th>
              <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
                <% @configuracions.each  do |c| %>          
            <tr>
              <td><%= c.nombre %></td>
              <td><%= c.direccion %></td>
              <td><%= c.ruc %></td>
              <td><%= c.timbrado %></td>
              <td><%= c.timbrado_vencimiento%></td>
              <td><%= c.telefono %></td>
              <td><%= c.telefono_auxiliar %></td>
              <td><i class="icon-edit" title="editar"></i><%= link_to "editar", edit_configuracion_path(c) %> &nbsp &nbsp &nbsp   
                      <i class="icon-remove-sign" title="borrar"></i><%= link_to "borrar",c, :confirm => "Desea eliminar el cliente "+c.nombre, :method => :delete %>
              </td>

            </tr>
                <% end %>
                
        </tbody>
      </table>
          <%=will_paginate  %> 
    </div>
     <div align="center">
      <%= link_to '(+) Nueva Empresa', conf_new_path %>
    </div>    
<% end %>